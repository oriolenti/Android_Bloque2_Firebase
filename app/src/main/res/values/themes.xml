<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base light application theme. -->
    <style name="Theme.ModuloDosFirebase" parent="Theme.ModuloDosFirebaseBase"></style>
    <!-- Base application theme. -->
    <style name="Theme.ModuloDosFirebaseBase" parent="Theme.MaterialComponents.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/baseLight</item>
        <item name="colorPrimaryVariant">@color/lighterLight</item>
        <item name="colorOnPrimary">@color/baseGrey</item>
        <item name="android:textColorPrimary">?attr/colorOnSecondary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/baseGrey</item>
        <item name="colorSecondaryVariant">@color/lighterGrey</item>
        <item name="colorOnSecondary">@color/baseLight</item>
        <item name="android:textColorSecondary">?attr/colorOnSecondary</item>

        <!-- Surface color -->
        <item name= "colorSurface"> ?attr/colorSecondary</item>
        <item name= "colorOnSurface">@color/clearColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/baseGrey</item>

        <!-- Background App -->
        <item name= "android:colorBackground">?attr/colorPrimary</item>

        <!-- Shadows Setup -->
        <item name="android:ambientShadowAlpha">0.7</item>
        <item name="android:spotShadowAlpha">0.7</item>


        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/ModuloDosFirebase.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Theme.ModuloDosFirebase.BottomBar</item>
        <item name="materialCardViewStyle">@style/ModuloDosFirebase.CardView</item>
        <item name="textInputStyle">@style/ModuloDosFirebase.Input</item>
    </style>
    <style name="Theme.ModuloDosFirebase.BottomBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/baseGrey</item>
        <item name="android:elevation">@dimen/shadow_elevation</item>
        <item name="itemIconTint">@color/selectable_buttons_color</item>
        <item name="itemRippleColor">@color/baseLightAlphaLow</item>
    </style>

    <style name="ModuloDosFirebase.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/baseGrey</item>
        <item name="android:elevation">@dimen/shadow_elevation</item>
    </style>

    <style name="ModuloDosFirebase.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/shadow_elevation</item>
    </style>

    <style name="ModuloDosFirebase.Input" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">@dimen/tiny</item>
        <item name="boxStrokeWidthFocused">@dimen/tiny</item>
        <item name="boxStrokeErrorColor">@color/baseCarmin</item>
        <item name="android:textColorHint">@color/baseLight</item>
        <item name="hintTextColor">@color/lighterLight</item>
    </style>
</resources>